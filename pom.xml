        <profile>
            <id>jenkins</id>
            <activation>
                <property>
                    <name>env.BUILD_NUMBER</name>
                </property>
            </activation>
        </profile>

        <profile>
            <id>jacoco</id>
            <build>
	      <plugins>
		<plugin>
		    <groupId>org.jacoco</groupId>
		    <artifactId>jacoco-maven-plugin</artifactId>
		    <executions>
			<execution>
                            <id>prepare-agent</id>
			    <goals>
				<goal>prepare-agent</goal>
			    </goals>
			</execution>
			<execution>
			    <id>report</id>
			    <phase>prepare-package</phase>
			    <goals>
				<goal>report</goal>
			    </goals>
			</execution>
		    </executions>
		</plugin>
	      </plugins>
            </build>
            <reporting>
                <plugins>
		    <plugin>
			<groupId>org.jacoco</groupId>
			<artifactId>jacoco-maven-plugin</artifactId>
                        <reportSets>
                           <reportSet>  			 
                             <reports>  			 
				<report>report</report>
                             </reports>  			 
                           </reportSet>  			 
                        </reportSets>
                    </plugin>
                </plugins>
            </reporting>
        </profile>

        <profile>
            <id>jpa-modules</id>
            <modules>
                <module>jpa</module>
            </modules>
        </profile>
        <profile>
            <id>ejb-modules</id>
            <modules>
                <module>ejb</module>
            </modules>
        </profile>
        <profile>
            <id>async-modules</id>
            <modules>
                <module>async</module>
            </modules>
        </profile>

        <profile>
            <id>all-modules</id>
            <modules>
                <module>build</module>
                <module>common</module>
                <module>javase</module>
                <module>projects</module>
                <module>jpa</module>
                <module>servers</module>
                <module>ejb</module>
                <module>async</module>
                <module>coursedocs</module>
            </modules>
        </profile>

        <profile>
            <id>test-deploy</id>
            <distributionManagement>
                <site>
                    <id>webdev.website</id>
                    <name>Test Site</name>
                    <url>scpexe://webdev.jhuep.com/home/jcs/public_html/test-deploy/sites/ejava-javaee</url>
                </site>
            </distributionManagement>
            <build>
               <pluginManagement>
                   <plugins>
                       <plugin>
                           <groupId>org.apache.maven.plugins</groupId>
                           <artifactId>maven-site-plugin</artifactId>
                           <configuration>
                               <skipDeploy>false</skipDeploy>
                           </configuration>
                       </plugin>
                   </plugins>
               </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>webdev</id>
            <distributionManagement>
                <repository>
                    <id>webdev.repository</id>
                    <name>ejava JHU repository</name>
                    <url>scpexe://webdev.jhuep.com/home/jcs/public_html/maven2</url>
                </repository>
                <snapshotRepository>
                    <id>webdev.snapshot.repo</id>
                    <name>ejava JHU snapshot repository</name>
                    <url>scpexe://webdev.jhuep.com/home/jcs/public_html/maven2-snapshot</url>
                    <uniqueVersion>false</uniqueVersion>
                </snapshotRepository>
                <site>
                    <id>webdev.website</id>
                    <name>ejava JHU webdev website</name>
                    <url>scpexe://webdev.jhuep.com/home/jcs/public_html/2019-draft-ejava-javaee</url>
                </site>
            </distributionManagement>
            <build>
               <pluginManagement>
                   <plugins>
                       <plugin>
                           <groupId>org.apache.maven.plugins</groupId>
                           <artifactId>maven-site-plugin</artifactId>
                           <configuration>
                               <skipDeploy>false</skipDeploy>
                           </configuration>
                       </plugin>
                   </plugins>
               </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>local-deploy</id>
            <activation>
                <property>
                    <name>!remote-deploy</name>
                </property>
            </activation>
            <distributionManagement>
                <site>
                    <id>local</id>
                    <name>Local Site</name>
                    <url>file:///tmp/ejava-javaee</url>
                </site>
            </distributionManagement>
            <build>
               <pluginManagement>
                   <plugins>
                       <plugin>
                           <groupId>org.apache.maven.plugins</groupId>
                           <artifactId>maven-site-plugin</artifactId>
                           <configuration>
                               <skipDeploy>false</skipDeploy>
                           </configuration>
                       </plugin>
                   </plugins>
               </pluginManagement>
            </build>
        </profile>
    </profiles>
</project>
