<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>info.ejava.examples.jpa</groupId>
        <artifactId>jpa-query</artifactId>
        <version>5.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>jpa-query-example</artifactId>

    <name>JPA::Query::Examples</name>
    <description>
        THis project contains JPA Query examples.
    </description>

    <!-- dependency versions are defined within parent-pom -->
    <dependencies>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <scope>provided</scope>
        </dependency>
    
        <dependency>
            <groupId>javax.persistence</groupId>
            <artifactId>javax.persistence-api</artifactId>
            <scope>provided</scope>
        </dependency>        

        <!-- generates JPA metadata classes -->
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-jpamodelgen</artifactId>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-core</artifactId>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>log4j</groupId>
          <artifactId>log4j</artifactId>
          <scope>test</scope>
        </dependency>    
    </dependencies>

    <build>
        <!-- filtering will replace URLs, credentials, etc in the 
             files copied to the target directory and used during testing.
            -->
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>

        <plugins>
            <!-- need to tweak compiler settings to handle generated classes in project -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <compilerVersion>${java.target.version}</compilerVersion>
                    <source>${java.source.version}</source>
                    <target>${java.target.version}</target>
                    <useIncrementalCompilation>false</useIncrementalCompilation>
                </configuration>	                
            </plugin>

            <!-- extends the pluginManagement definition in the parent pom
                 to generates DDL files for persistence unit.
                 See effective-pom for full configuration -->
            <plugin>
                <artifactId>jpa-schemagen-maven-plugin</artifactId>
                <groupId>info.ejava.utils.jpa</groupId>
                <configuration>
                    <persistenceUnit>jpa-query-example-test</persistenceUnit>
                </configuration>
            </plugin>

            <!-- package the persistence unit in a test-jar so it can
                 be used by downstream client tests -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                        <configuration>
                            <!-- include or exclude as appropriate -->
                            <includes>
                                <include>META-INF/persistence.xml</include>
                            </includes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>

    <profiles>
        <!-- use this in Jenkins -->
        <profile>
          <id>jenkins</id>
          <activation>
	        <property>
	            <name>JENKINS_URL</name>
	        </property>
          </activation>
          <build>
              <plugins>
              </plugins>
          </build>
        </profile>

        <!-- don't add this to classpath if we are building on Jenkins -->
        <profile>
            <id>metamodel</id>
	    <activation>
	        <property>
	            <name>m2e.version</name>
	        </property>
	    </activation>
            <build>
                <plugins>
                    <!-- add generated JPA metamodel classes to classpath -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>build-helper-maven-plugin</artifactId>
                        <executions>
                           <execution>
                               <id>add-metamodel-classes</id>
                               <phase>process-sources</phase>
                               <goals>
                                   <goal>add-source</goal>
                               </goals>
                               <configuration>
                                   <sources>
                                       <source>target/generated-sources/annotations</source>
                                   </sources>
                               </configuration>
                           </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <profile>
            <id>testing</id>
            <activation>
                <property>
                    <name>!skipTests</name>
                </property>
            </activation>
      
            <build>
                <plugins>
                    <plugin>
                        <!-- runs schema against the DB -->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>        

                        <dependencies>
                            <dependency>
                                <groupId>com.h2database</groupId>
                                <artifactId>h2</artifactId>
                                <version>${h2db.version}</version>
                            </dependency>
                        </dependencies>
                        
                        <configuration>
                            <username>${jdbc.user}</username>
                            <password>${jdbc.password}</password>
                            <driver>${jdbc.driver}</driver>
                            <url>${jdbc.url}</url>          
                        </configuration>
                    
                        <executions>
                            <execution>
                                <id>drop-db-before-test</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>    
                                <configuration>              
                                    <autocommit>true</autocommit>
                                    <fileset>
                                        <basedir>${basedir}</basedir>
                                        <includes>
                                            <include>target/classes/ddl/**/*dropJPA.ddl</include>
                                        </includes>
                                    </fileset>
                                    <onError>continue</onError>
                                </configuration>        
                            </execution>
                                          
                            <execution>
                                <id>create-db-before-test</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>    
                                <configuration>              
                                    <autocommit>true</autocommit>
                                    <fileset>
                                        <basedir>${basedir}</basedir>
                                        <includes>
                                            <include>target/classes/ddl/**/*createJPA.ddl</include>                  
                                        </includes>
                                    </fileset>
                                    <print>true</print>
                                </configuration>        
                            </execution>
                                          
                            <execution>
                                <id>populate-db-before-test</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>    
                                <configuration>              
                                    <autocommit>true</autocommit>
                                    <fileset>
                                        <basedir>${basedir}</basedir>
                                        <includes>
                                            <include>target/test-classes/ddl/**/*populate*.ddl</include>
                                        </includes>
                                    </fileset>
                                </configuration>        
                            </execution>

                    <!-- commenting out leaves residue in DB for inspection
                            <execution>
                                <id>drop-db-after-test</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>    
                                <configuration>              
                                    <autocommit>true</autocommit>
                                    <fileset>
                                        <basedir>${basedir}</basedir>
                                        <includes>
                                            <include>target/classes/ddl/**/*dropJPA.ddl</include>
                                        </includes>
                                    </fileset>
                                </configuration>        
                            </execution>
                    -->
                        </executions>
                    </plugin>          

                </plugins>          
            </build>          
        </profile>
    </profiles>
</project>
